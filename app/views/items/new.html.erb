
<% provide(:title, 'Add item') %>
<h1>Add item</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@item) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :category %>
      <%= f.text_field :category %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :location %>
      <%= f.text_field :location %>

      <%= f.label :value %>
      <%= f.text_field :value %>

      <%= f.label :damage %>
      <%= f.text_field :damage %>

      <%= f.submit "Create an item", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>



